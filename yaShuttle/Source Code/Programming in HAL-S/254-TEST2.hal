C/ Adapted from PDF p. 254 of "Programming in HAL/S".

 T254: PROGRAM;

     DECLARE I INTEGER,
             B BIT(16);
     READ(5) I;
E    .
M    B = BIT(I);
E       .
M    IF B  THEN   
S	 1

        WRITE(6) 'VALUE OF I WAS NEGATIVE';
E       .
M    IF B  THEN
S        #

        WRITE(6) 'VALUE OF I WAS ODD';
      
 CLOSE T254;