  TEST:
  FUNCTION(I) BOOLEAN;
     DECLARE I INTEGER;
     DECLARE INTEGER,
                WORD, BITNUM;
     DECLARE INFO ARRAY(1 + 1000 / 16) BIT(16) 
                                        INITIAL(BIN'11010111101');
     
     WORD = DIV(I, 16);
     BITNUM = I - 16 WORD;
E            .
M    RETURN INFO	       ;
S               WORD+1:BITNUM+1
 
  CLOSE TEST;
  