C/ From PDF p. 199 in "Programming in HAL/S".

  P:
  PROGRAM;
     DECLARE SCALAR,
                A INITIAL(10), B CONSTANT(11), C INITIAL(12);
     DECLARE INTEGER,
                X CONSTANT(13), Y INITIAL(14), Z CONSTANT(15);
    ON ERROR
        DO;
           WRITE(6) A, B, C, X, Y, Z;
           RETURN;
        END;
Z    ON ERROR$(10:5) RETURN;
Z    ON ERROR$(10:)  IGNORE;
Z    ON ERROR$(4:2)  SYSTEM;

C       .
C       .
C       .

  LAST_CARD:

Y %SVCI(0);
  CLOSE P;